void DisplayRpsImage(uint8_t x)
{
    unsigned char *image_data; size_t image_size;
    unsigned char *image_data2; size_t image_size2;
    unsigned char *image_data3; size_t image_size3;
    unsigned char *image_data4; size_t image_size4;
    LCD_Clear(); 

    switch (x)
    {
        case 1: // 石頭
            image_data = rock_image1; image_size = sizeof(rock_image1);
            image_data2 = rock_image2; image_size2 = sizeof(rock_image2);
            image_data3 = rock_image3; image_size3 = sizeof(rock_image3);
            image_data4 = rock_image4; image_size4 = sizeof(rock_image4);
            break;
        case 2: // 布
            image_data = paper_image1; image_size = sizeof(paper_image1);

            image_data2 = paper_image2; image_size2 = sizeof(paper_image2);
            image_data3 = paper_image3; image_size3 = sizeof(paper_image3);
            image_data4 = paper_image4; image_size4 = sizeof(paper_image4);
            break;
        case 3: // 剪刀
            image_data = scissor_image1; image_size = sizeof(scissor_image1);
            image_data2 = scissor_image2; image_size2 = sizeof(scissor_image2);
            image_data3 = scissor_image3; image_size3 = sizeof(scissor_image3);
            image_data4 = rock_image4; image_size4 = sizeof(scissor_image4);
            break;
        default:
            return; 
    }
    LCD_DrawString(0, 0, image_data, image_size);
    LCD_DrawString(0, 8, image_data2, image_size2);
    LCD_DrawString(2, 0, image_data3, image_size3);
    LCD_DrawString(2, 8, image_data4, image_size4);
}
